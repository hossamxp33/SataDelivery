<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="data"
            type="com.example.satadelivery.models.current_orders.OrderDetail" />

        <variable
            name="Context"
            type="com.example.satadelivery.presentation.map_activity.MapActivity" />
        <variable
            name="listener"
            type="com.example.satadelivery.helper.ClickHandler"/>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            android:background="@drawable/opacity_back_g"

            app:layout_constraintBottom_toTopOf="@+id/close_button"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="16dp">


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/recent_location"
                style="@style/topicTitleTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/orderDetails"
                android:textColor="@color/red2"
                android:layout_marginRight="@dimen/dimen_24"

                android:textSize="@dimen/dimen_24"
                app:layout_constraintLeft_toRightOf="@+id/dismissBtn"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/dismissBtn"
                android:layout_width="46dp"
                android:layout_height="46dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/dismiss_ic"/>

            <View
                android:id="@+id/guid"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recent_location" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/dailyOrderRecycle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="16dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/guid"
                tools:itemCount="2"
                tools:listitem="@layout/details_order_adapter" />


        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/close_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_4"
            android:background="@drawable/cancel_btn_bg"
            android:padding="@dimen/dimen_12"
            android:text="@string/close"
            android:textAlignment="center"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintWidth_percent="0.45" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
